<%= form_for(@article, url: user_article_path) do |f| %>

  <%= hidden_field_tag "article[user_id]", "#{current_user.id}" %>


  <%= f.label :category, "Choose a category" %><br>
  <%= f.collection_select :category_id, Category.all, :id, :title %><br><br>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br><br>

  <p>Choose from the list of Sources:</p>
  <div class="field">
    <%= f.collection_check_boxes :source_ids, Source.all, :id, :name%><br>
  </div>

  <p>Enter an Address:</p>
  <%= f.fields_for :address, @article.address do |address_fields| %>
  <ul>
    <li>
      <%= address_fields.label :city %>
      <%= address_fields.text_field :city %>
    </li>
    <li>
      <%= address_fields.label :country_id, "Choose a country where the events of your story is taking place "%><br>
      <%= address_fields.collection_select :country_id, Country.all, :id, :title %><br><br>
    </li>
    <% end %>
  </ul>

  <p>Create a Source:</p>
  <%= f.fields_for :sources, @article.sources.build do |sources_fields| %>
  <ul>
    <li>
      <%= sources_fields.label :name %>
      <%= sources_fields.text_field :name %>
    </li>
    <% end %>
  </ul>
  <%= f.submit "Submit" %>

<% end %>

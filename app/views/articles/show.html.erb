<ul class="list-group">

  <li class="list-group-item active"><h3><%= @article.title %></h3></li>

  <% if @article.user.author? %>
    <li class="list-group-item"> Author: <%= @article.user.name %> </li>
  <% end %>

    <li class="list-group-item">Sources:
      <% @article.sources.each do |src| %>
        <%= src.name + ", " %></li>
      <% end %>


    <li class="list-group-item">Country: <%= @article.address.country.title %></li>
    <li class="list-group-item">City: <%= @article.address.city %></li>

    <li class="list-group-item">Category: <%= @article.category.title %> </li>


    <!-- defining user role-->
    <li class="list-group-item"><%= @article.content%></li>


    <% if !current_user.nil? && current_user.id == @article.user_id && current_user.author? %>
      <li class="list-group-item"><%= button_to "Delete", destroy_article_url %></li>
      <li class="list-group-item"><%= link_to "Edit", edit_article_url(@article) %></li>
    <% end %>
    </ul>

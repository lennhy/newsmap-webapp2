<ul class="list-group">
  <li class="list-group-item dark-green"><h3><%= @article.title %></h3></li>
    <li class="list-group-item active">Sources:</li>
  <% @article.sources.each do |src| %>
    <li class="list-group-item"> <%= src.name %> </li>
  <% end %>
</ul>

<b>Country:</b>
  <ul>
    <li><p> <%= @article.address.country.title %> </p></li>
  </ul>
  <b>City:</b>
  <ul>
    <li><p> <%= @article.address.city %> </p></li>
  </ul>
<b>Category:</b>
  <ul>
    <li><p> <%= @article.category.title %> </p></li>
  </ul>

<!-- defining user role-->
<h3><%= @article.content%></h3>

<% if @article.user.author? %>
  <p> Author: <%= @article.user.name %> </p>
<% end %>

<% if !current_user.nil? && current_user.id == @article.user_id && current_user.author? %>
  <p><%= button_to "Delete", destroy_article_url %>
  <p><%= link_to "Edit", edit_article_url(@article) %>
<% end %>

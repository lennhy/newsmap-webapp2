<h3><%= @article.title%></h3>

<p>By <%= @article.user.name%><p>

<b>Sources:</b>
<ol>
<% @article.sources.each do |source|  %>
  <li> <%= source.name %> </li>
<% end %>
</ol>

<b>Country:</b>
<ul>
  <p><li><%= @article.country.title %></li></p>
</ul>

<b>Category:</b>
<ul>
  <p><li><%= @article.category.title %></li></p>
</ul>

  <p><%= @article.content%></p>
  <p><%=@article.total_validations %> votes

<!-- if the current user is the owner of the article then they can delete it -->
<%  if current_user.id == @article.user.id %>
  <p><%= button_to "Delete", destroy_article_url %>
  <p><%= link_to "Edit", edit_article_url(@article) %>
<% end %>

<% if current_user.reader? %>
  <p><%= button_to "Validate", :method =>"post"%>
<% end %>

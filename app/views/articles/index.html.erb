<tbody>
  <!-- Greeting  -->
  <% if !current_user.nil? %>
    <i><p>Welcome <%= current_user.name %></p></i>
  <% end %>

  <tr>
    <%= render 'roles' %>
  </tr>

  <tr>
    <td><h3> All Articles </h3><br></td>
    <td><i> Most Credited Article: <b><%= Article.most_credited_article %></i> </b> <td><br>
  </tr>
  <br>
</tbody>
<!-- define what user has access to based on user role -->
<% if current_user && current_user.author? %>
  You are an: Author
  <p> <%= link_to "Start writting your first article", new_article_path(current_user.id) %> </p>

<% else %>
  <b>You are a:</b> Reader
  <p> Choose from any category to read <p>
<% end %>

  <% @articles.each do |article| %>
  <tr>

      <%= render partial: "articles", locals: {article: article} %></li>

  </tr>
      <% article.users.each do |user| %>
        <ul>
          <% if user.author? %>
              <li>Author: <%= user.name %></li>
          <% elsif user.reader? %>
              <li>Creditor: <%= user.name %></li>
          <% end %>
        </ul>
      <% end %>
      <br>
  <% end %>

<h3>My Articles</h3>

  <% if current_user.reader? %>

      <%= current_user.name %>

      <p><%= pluralize(current_user.total_reader_validations,"validations made")%> </p>

      <h3>Articles Validated:</h3>
    <ol>
      <% current_user.validations.each do |validation| %>
        <li><%= validation.article.title %></li>
      <% end %>
    </ol>

    <% else %>

    <%= current_user.name %>
    <ol>
    <% current_user.articles.each do |article| %>
          <li> <%= link_to article.title, user_article_path(current_user.id, article.id) %></li>
    <% end %>

  <% end %>
</ol>

<h3>My Articles</h3>

  <% if current_user.reader? %>
    <%= current_user.name %>
    <p><%= pluralize(current_user.total_reader_validations, "validation")%> </p>
    <h3>Articles Validated:</h3>

    <ol>
      <% current_user.validations.each do |validation| %>
        <li><%= validation.article.title %></li>
      <% end %>
    </ol>

    <% else %>

    <b><%= current_user.name %></b>

    <ul>
    <% current_user.articles.each do |article| %>

    <% end %>

  <% end %>
</ul>

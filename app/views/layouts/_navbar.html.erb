<nav class="transparent has-bottom-border navbar navbar-inverse  ">

  <div class="container-fluid ">

    <div class="navbar-header">
      <a class="navbar-brand" href="/">NewsMap</a>
    </div>

    <ul class="nav navbar-nav">
      <% if current_user != nil && current_user.role != "reader" %>
      <button type="button" id="articlesLink" class="btn btn-outline-info transparent" data-id="<%= current_user.id %>">See Your Articles</button>
      <% else %>
        <li><%= link_to "Profile", user_path(current_user) if !current_user.nil? %></li>
      <% end %>
      <% if current_user %>
        <li> <%= link_to "Articles", articles_path if signed_in?%></li>
      <% end %>
      <button type="button" class="btn btn-outline-info transparent"> <%= link_to "Start writting your first article", new_article_path(current_user.id) %> </button>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      <% else %>
        <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %> </li>
        <li><%= link_to "Sign in", user_session_path, method: 'new' %> </li>
        <li><%= link_to "Sign up", user_registration_path, method: 'create' %></li>
      <% end %>
    </ul>

  </div>

</nav>

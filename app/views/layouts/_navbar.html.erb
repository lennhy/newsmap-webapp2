<div id = "navigator">
  <ul>
    <li><h2>NewsMap</h2></li>
    
      <% if current_user != nil && current_user.role != "reader" %>
        <li><button id="articlesLink" data-id="<%= current_user.id %>">See Your Articles</button></li>
      <% else %>
        <td><%= link_to "Profile", user_path(current_user) if !current_user.nil? %></td>
      <% end %>

      <% if current_user %>
        <td> <%= link_to "Articles", articles_path if signed_in?%></td>
      <% end %>

  </ul>
</div>

<!-- <div id = "navigator"> -->
<nav class="transparent navbar navbar-inverse  ">

    <div class="navbar-header">
      <a class="navbar-brand" href="/">NewsMap</a>
    </div>

    <ul class="nav navbar-nav">
      <% if current_user != nil && current_user.role != "reader" %>
      <button type="button" id="articlesLink" class="btn btn-outline-info transparent" data-id="<%= current_user.id %>">My Articles</button>
      <% else %>
        <li><%= link_to "Profile", user_path(current_user) if !current_user.nil? %></li>
      <% end %>
      <% if current_user %>
        <li> <% if signed_in? %></li>
              <button type="button" class="btn btn-outline-info transparent"> <%= link_to "Write an article", new_article_path(current_user.id) %> </button>
        <% end %>
      <% end %>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      <% else %>
        <li><%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %> </li>
        <li><%= link_to "Sign in", user_session_path, method: 'new' %> </li>
        <li><%= link_to "Sign up", user_registration_path, method: 'create' %></li>
      <% end %>
    </ul>

</nav>
<nav class="transparent has-bottom-border navbar navbar-inverse  white-background">

    <ul class="list-inline">
        <!-- Class method helper method -->
        <li>Most Credited Article: <%= most_popular_article %></li>

      <% if current_user && current_user.author? %>
        <li class="pull-right">Author: <%= current_user.name %></li>
      <% else %>
        <li class="pull-right">Reader: <%= current_user.name %></li>
        <li> Choose from any category to read </li>
      <% end %>

    </ul>
</nav>

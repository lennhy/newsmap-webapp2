<div class="container-fluid background-image">
  <!-- <%= devise_error_messages! %> -->

<div class="row devise-form">

  <div class="col-12">
    <ul class="list-group ">
      <h3 class="header">Sign up</h3>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_pasword_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <!-- if clicked user changes to reader -->
    <%= f.label :role, 'Reader', :checked => false %><br />

    <%= f.radio_button :role, 'reader', :checked => false %>

    <!-- if clicked user changes to author -->
    <%= f.label :role, 'Author'%><br />
    <%= f.radio_button :role, 'author' %>

  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
  </ul>
  </div>
</div>

<ul class="list-group">
  <li  class="list-group-item"><%= render "devise/shared/links" %></li>
</ul>
